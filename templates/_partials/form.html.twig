{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'was-validated', 'id': 'upload-file'}}) }}
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            {% if form_errors(form.documents)|length > 1 %}
                {{ form_widget(form.documents, {'value':''}) }}
            {% else %}
                {{ form_widget(form.documents) }}
            {% endif %}
        </div>
    </div>
    <div class="form-check d-flex justify-content-right mb-5">
       <div class="invalid-feedback">{{ form_errors(form.documents) }}</div>
    </div>
    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Upload File</button>
    </div>
{{ form_row(form._csrf_token, {'attr': {'value': csrf_token('authenticate') }}) }}
{{ form_end(form) }}
